<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ExplorarActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/busqueda_edittext"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/comfortaa"
                    android:hint="@string/busqueda_txt"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

                <Button
                    android:id="@+id/buscar_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/busqueda_txt" />
            </LinearLayout>

            <TextView
                android:id="@+id/categorias_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/categorias_txt"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/blackwork_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/blackword_txt" />

                <Button
                    android:id="@+id/oldschool_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/oldschool_txt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/neotrad_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/neotradicional_txt" />

                <Button
                    android:id="@+id/dotwork_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/dotwork_txt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/blkgrey_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/blkgrey_txt" />

                <Button
                    android:id="@+id/acuarela_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/acuarela_txt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/japo_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/japones_txt" />

                <Button
                    android:id="@+id/real_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/comfortaa"
                    android:text="@string/realista_txt" />
            </LinearLayout>

            <Button
                android:id="@+id/orna_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/comfortaa"
                android:text="@string/ornamental_txt" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>